<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_c3_uiwidgest_test"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seven.androidfirstbookalldemo.c3.C3UIWidgestTestActivity">
    <TextView
        android:id="@+id/C3_textview_2"
        android:text="This is a TextView"
        android:gravity="left"
        android:textSize="24sp"
        android:textColor="#00ff00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/C3_textview_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />
    <TextView
        android:id="@+id/C3_textview_1"
        android:text="This is a TextView"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#00ff00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/C3_editxt_1"
        android:hint="Hint提示文本"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/C3_button_DeTxOut"
        android:text="textToask"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/C3_image_no1"
        android:src="@drawable/img_no1"
        android:layout_width="50pt"
        android:layout_height="50pt" />

    <Button
        android:id="@+id/C3_button_ChaImg"
        android:text="ChangeIMG"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/C3_progressbar_1"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/C3_button_PorBarUp"
        android:text="PorBarUp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/C3_button_PorBarGONE"
        android:text="PorBargGoneVisiable"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/C3_button_AlertDialog"
        android:text="AlertDialog"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/C3_button_ProgressDialog"
        android:text="ProgressDialog"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

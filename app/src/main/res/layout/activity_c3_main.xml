<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_c3_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seven.androidfirstbookalldemo.c3.C3MainActivity">

    <Button
        android:id="@+id/C3_main_btn_toWidgst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToWidgst"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/C3_main_btn_toLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToLayout"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/C3_main_btn_toView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToView"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/C3_main_btn_toListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToListView"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/C3_main_btn_toRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToRecyclerView"
        android:textAllCaps="false" />
</LinearLayout>
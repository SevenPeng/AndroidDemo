<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c5_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seven.androidfirstbookalldemo.c5.C5MainActivity">

    <Button
        android:id="@+id/c5_btn_to_boradcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boradcast"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/c5_btn_to_pactice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/c5_btn_to_boradcast"
        android:layout_toEndOf="@+id/c5_btn_to_boradcast"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <Button
        android:id="@+id/c5_btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textAllCaps="false"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/c5_btn_to_pactice"
        android:layout_toEndOf="@+id/c5_btn_to_pactice" />
</RelativeLayout>
